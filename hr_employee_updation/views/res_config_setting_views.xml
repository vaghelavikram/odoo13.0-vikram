<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_probation_settings" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr.employee</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Employees" string="e-Zestian" data-key="hr" groups="hr.group_hr_manager">
                    <h2>e-Zestian Probation Survey Days</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="employee_probation_survey_days"/>
                                <span class="fa fa-lg fa-building-o" role="img" groups="hr.group_hr_manager"/>
                                <div class="row">
                                    <div class="text-muted col-lg-8">
                                        Probation Survey Days...
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="employee_probation_survey_days" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="employee_fnf_days"/>
                                <span class="fa fa-lg fa-building-o" role="img" groups="hr.group_hr_manager"/>
                                <div class="row">
                                    <div class="text-muted col-lg-8">
                                        Probation Survey Days...
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="employee_fnf_days" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
