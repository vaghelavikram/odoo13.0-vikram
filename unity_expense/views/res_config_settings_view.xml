<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.hr.expense</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="85"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Expenses" string="Expenses" data-key="hr_expense" groups="hr_expense.group_hr_expense_manager">
                        <h2>Responsible Accounts</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-6 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="responsible_account1"/>
                                    <div class="row">
                                        <div class="text-muted col-lg-8">
                                            Responsible Accountant 1
                                        </div>
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="responsible_account1"
                                                class="o_light_label"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="responsible_account2"/>
                                    <div class="row">
                                        <div class="text-muted col-lg-8">
                                            Responsible Accountant 2
                                        </div>
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="responsible_account2"
                                                class="o_light_label"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mt16 o_settings_container">
                            <div class="col-6 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="responsible_payment"/>
                                    <div class="row">
                                        <div class="text-muted col-lg-8">
                                            Responsible Payment Approval
                                        </div>
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="responsible_payment"
                                                class="o_light_label"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
